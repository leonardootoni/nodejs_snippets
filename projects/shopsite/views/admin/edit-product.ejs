<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../includes/head.ejs") %>
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>
  <body>
    <header><%-include("../includes/navigation.ejs")%></header>
    <%
      let buttonText = "Update Product";
      if (typeof editing === 'undefined') {
        product = {
          id: "",
          title: "",
          imageUrl: "",
          price: "",
          description: ""
        };
        buttonText = "Add Product";
      }
    %>
      <form class="product-form" action="<%=submitAction%>" method="POST">
        <div class="form-control">
          <%if(typeof editing !== 'undefined' && editing === true) { %>
            <input type="hidden" name="productId" value="<%=product.id%>">
          <% } %>
          <label for="title">Title:</label>
          <input
            type="text"
            name="title"
            id="title"
            value="<%=product.title%>"
          />
        </div>
        <div class="form-control">
          <label for="imageUrl">Image URL:</label>
          <input
            type="text"
            name="imageUrl"
            id="imageUrl"
            value="<%=product.imageUrl%>"
          />
        </div>
        <div class="form-control">
          <label for="price">Price:</label>
          <input
            type="number"
            name="price"
            id="price"
            min="0"
            step="0.01"
            value="<%=product.price%>"
          />
        </div>
        <div class="form-control">
          <label for="description">Description:</label>
          <textarea name="description" id="description" rows="5">
<%=product.description%></textarea
          >
        </div>
        <button class="btn" type="submit"><%=buttonText%></button>
      </form>
    </main>
    <%-include("../includes/footer.ejs")%>
  </body>
</html>
